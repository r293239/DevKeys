{
  "manifest_version": 3,
  "name": "Universal Coding Keyboard",
  "version": "1.0.0",
  "description": "Transform your keyboard for coding on any website",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {"service_worker": "background.js"},
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["content.js"],
    "css": ["popup.css"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Coding Keyboard Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
